<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


  <style name="Busapp.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_dark</item>

    <!-- <item name="android:windowBackground">@color/window_background</item> -->

    <item name="colorAccent">@color/accent</item>


    <!-- <item name="@android:windowBackground">@color/background_material_dark</item> -->
    <item name="colorControlActivated">@color/accent</item>
    <item name="colorControlNormal">@color/primary</item>
    <!--
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    -->


    <!--
     You can also set colorControlNormal, colorControlActivated
     colorControlHighlight, and colorSwitchThumbNormal.
    -->

    <item name="textAppearanceSearchResultTitle">@style/SearchResultTitle</item>
    <item name="textAppearanceSearchResultSubtitle">@style/SearchResultSubtitle</item>
    <item name="MaterialTapTargetPromptTheme">@style/TapTargetTheme</item>


    <item name="actionModeBackground">@color/primary_bright</item>

    <item name="actionModeCloseDrawable">@drawable/ic_close</item>

    <item name="windowActionModeOverlay">true</item>

    <item name="backgroundFilter">#cccccc</item>
    <!--
        <item name="rowBackground">#c0006699</item>
    -->

    <item name="rowBackground">#c0006699</item>
    <item name="actionBarBackground">#80000000</item>
    <item name="rowTextColor">@color/white</item>


    <item name="autoCompleteTextViewStyle">@style/autoCompleteTextViewStyle</item>

  </style>


  <style name="autoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
    <item name="android:popupBackground">@color/white</item>
  </style>

  <style name="BusApp.Theme.NoActionBar" parent="@style/Busapp.Theme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <!-- Styles -->
  <style name="OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
  </style>

  <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:background">?attr/colorPrimary</item>

    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="searchViewStyle">@style/SearchViewStyle</item>
    <item name="android:dropDownItemStyle">@style/DropDownItemStyle</item>


  </style>

  <style name="PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
    <!--
        <item name="android:background">?attr/selectableItemBackground</item>
    -->
    <item name="android:background">#00000000</item>
  </style>


  <style name="DialogTheme" parent="@style/Theme.AppCompat.Light.Dialog"></style>

  <style name="TransparentToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">


    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primary_dark</item>

  </style>

  <style name="WebBrowserToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



  </style>

  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
  </style>

  <style name="TapTargetTheme">
    <item name="mttp_backgroundColour">#C0005781</item>
    <item name="mttp_focalColour">#44FFFFFF</item>
  </style>
</resources>