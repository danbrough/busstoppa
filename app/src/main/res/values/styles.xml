<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="StopInfoHeader" parent="@style/TextAppearance.AppCompat.Body1">
    <item name="android:textColor">#ffffff00</item>
    <item name="android:background">@color/primary_dark</item>
    <item name="android:padding">5dip</item>
    <item name="android:textStyle">bold</item>

  </style>

  <style name="StopInfoCell" parent="@style/TextAppearance.AppCompat.Body2">
    <item name="android:textColor">@color/white</item>
    <item name="android:padding">5dip</item>
    <item name="android:textStyle">bold</item>
    <item name="android:background">@color/primary_light</item>

  </style>

  <style name="SearchDropDown" parent="RtlOverlay.Widget.AppCompat.Search.DropDown">
    <item name="android:background">@drawable/dropdown_item_background</item>
  </style>

  <style name="DropDownItemStyle" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
    <item name="android:background">#00000000</item>
  </style>

  <style name="SearchResultTitle" parent="@style/TextAppearance.AppCompat.Light.SearchResult.Title">
    <item name="android:textColor">@color/primary_light</item>

  </style>

  <style name="SearchResultSubtitle" parent="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle">

    <item name="android:textColor">#555555</item>


  </style>


  <style name="SearchViewStyle" parent="@style/Widget.AppCompat.Light.SearchView">
    <item name="suggestionRowLayout">@layout/search_dropdown</item>

  </style>

  <style name="stopNumberTextAppearance" parent="@style/TextAppearance.AppCompat.Large">
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@color/primary_dark</item>
    <item name="android:padding">2dip</item>
  </style>


</resources>